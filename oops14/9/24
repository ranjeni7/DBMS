#include<iostream>
using namespace std;
class factorial
{
      private:
          int number;
      public:
          factorial(int n):number(n)
          {
               int i,fact=1;
               for(i=1;i<number+1;i++)
               {
                  fact=fact*i;
               }
               cout<<"The factorial of"<<number<<"is"<<fact;
          }
};
int main()
{
    int number;
    cout<<"Enter the limit of the fibonacci series";
    cin>>number;
    factorial fact(number);
    return 0;
}
#include <iostream>
using namespace std;

class Area
{
private:
    int length;
    int breadth;
    int area;

public:
    Area(int l, int b) : length(l), breadth(b) 
    {
        area = length * breadth;
    }
    void display()
    {
        cout << "The area of length " << length << " and breadth " << breadth << " is " << area << endl;
    }
};

int main()
{   int length, breadth;
    cout<<"Enter the length and breadth";
    cin>>length>>breadth;
    Area a(length,breadth);
    a.display();  
    return 0;
}
#include<iostream>
using namespace std;
class fibonacci
{
      private:
          int number;
      public:
          fibonacci(int n):number(n)
          {
               int a,b,c,i;
               a=0;
               b=1;
               c=0;
               for(i=0;i<number;i++)
               {
                   cout<<c<<endl;
                   a=b;
                   b=c;
                   c=a+b;
               }
          }
};
int main()
{
    int number;
    cout<<"Enter the limit of the fibonacci series";
    cin>>number;
    fibonacci fibo(number);
    return 0;
}
#include<iostream>
using namespace std;
class initial
{
      private:
          int a;
          int b;
      public:
          initial():a(0),b(0)
          {
          }
          void getdata(){
               cout<<"Enter a:";
               cin>>a;
               cout<<"Enter b:";
               cin>>b;
          }
          void showdata(){
               cout<<a<<b<<endl;
          }
};
int main()
{
    initial i;
    i.getdata();
    i.showdata();
    return 0;
}
#include<iostream>
using namespace std;
class sum
{
      private:
          int number;
      public:
          sum(int n):number(n)
          {
               int i, sum=0;
               for(i=0;i<number;i++)
               {
                   sum=sum+i;
               }
               cout<<"The sum of"<<number<<" numbers is"<<sum;
          }
};
int main()
{
    int number;
    cout<<"Enter the limit of the sum of numbers";
    cin>>number;
    sum s(number);
    return 0;
}

